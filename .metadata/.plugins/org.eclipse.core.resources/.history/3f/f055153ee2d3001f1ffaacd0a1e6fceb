package controlador.db;


import org.hibernate.Session;
import org.hibernate.query.Query;

import java.util.List;

public class UsuarioDAO {

    public List<Integer> obtenerIdsUsuarios() {
        // Abrir una nueva sesi√≥n
        Session session = HibernateUtil.getSessionFactory().openSession();
        List<Integer> idsUsuarios = null;
        try {
            String hql = "SELECT u.id FROM Usuario u";
            Query<Integer> query = session.createQuery(hql, Integer.class);

            // Ejecutar la consulta y obtener el resultado
            idsUsuarios = query.list();
        } catch (Exception e) {
            e.printStackTrace();
        } finally {
            session.close();
        }

        return idsUsuarios;
    }
    
	public static void main(String[] args) {
		UsuarioDAO usuarioDAO = new UsuarioDAO();
		List<Integer> idsUsuarios = usuarioDAO.obtenerIdsUsuarios();
		for (Integer id : idsUsuarios) {
			System.out.println(id);
		}
	}
}

