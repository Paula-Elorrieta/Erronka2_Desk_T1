import modelo.Users;
import org.hibernate.Session;
import org.hibernate.query.Query;

public class LoginC {

    public Users loginEgin(String username, String password) {
        Users user = null; // Inicializar el objeto usuario

        // Obtener la sesión de Hibernate
        try (Session session = HibernateUtil.getSessionFactory().openSession()) {
            // Construir la consulta HQL
            String hql = "FROM Users u WHERE u.username = :username AND u.password = :password";
            Query<Users> query = session.createQuery(hql, Users.class);
            query.setParameter("username", username);
            query.setParameter("password", password);

            // Obtener el resultado único
            user = query.uniqueResult();

            if (user == null) {
                System.out.println("Erabiltzailea ez da existitzen edo pasahitza okerra.");
            }
        } catch (Exception e) {
            e.printStackTrace();
        }

        return user; // Devolver el objeto Users (o null si no se encuentra)
    }
}
