package controlador;

import modelo.Horarios;
import modelo.Modulos;

import org.hibernate.Session;
import org.hibernate.query.Query;

import controlador.db.HibernateUtil;
import java.util.List;

public class HorariosC {

    public List<Horarios> obtenerHorariosPorProfesor(int profeId) {
        Session session = HibernateUtil.getSessionFactory().openSession();
        try {
            // Consulta HQL para obtener los horarios de un profesor específico por su ID
            String hql = "FROM Horarios h " +
                         "LEFT JOIN FETCH h.users " + 
                         "LEFT JOIN FETCH h.modulos " + 
                         "WHERE h.users.id = :profeId"; 

            Query<Horarios> query = session.createQuery(hql, Horarios.class);
            query.setParameter("profeId", profeId);

            // Obtiene los horarios del profesor como una lista
            List<Horarios> horarios = query.list();
            //meter los modulos en los horarios correspondientes
            obtenerModulosPorProfesor(profeId);
            
            return horarios;
        } catch (Exception e) {
            e.printStackTrace();
            return null;
        } finally {
            session.close();
        }
    }
    
    
    
    // Método para obtener los módulos asociados al horario de un profesor
    public List<Modulos> obtenerModulosPorProfesor(int profeId) {
        Session session = HibernateUtil.getSessionFactory().openSession();
        try {
            // Consulta HQL para obtener los módulos de los horarios del profesor
            String hql = "SELECT m FROM Horarios h " +
                         "JOIN h.modulos m " +
                         "WHERE h.users.id = :profeId";

            Query<Modulos> query = session.createQuery(hql, Modulos.class);
            query.setParameter("profeId", profeId);

            // Obtiene los módulos como una lista
            List<Modulos> modulos = query.list();
            
            // Imprimir los módulos para verificar (opcional)
            for (Modulos modulo : modulos) {
                System.out.println("Módulo ID: " + modulo.getId() +
                                   ", Nombre: " + modulo.getNombre());
            }
            
            return modulos;
        } catch (Exception e) {
            e.printStackTrace();
            return null;
        } finally {
            session.close();
        }
    }

    
}

